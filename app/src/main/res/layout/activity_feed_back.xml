<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.itheima10.team17.redchild.ui.activity.FeedBackActivity">

    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/titlebar_feedback"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        app:leftIsBack="true"
        app:leftTitle="返回"
        app:mainTitle="用户反馈"
        app:rightIsVIsible="false"
        app:titleDrawable="@mipmap/about" />

    <TextView
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="反馈内容(您可以输入对商品以及客户端的建议和意见)"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:layout_margin="15dp"
        android:background="#00ffff"
        android:layout_width="match_parent"
        android:minHeight="100dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_feed_back_text"
            android:hint="用户评论输入框"
            android:textSize="15sp"
            android:padding="10dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="联系方式"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:layout_margin="15dp"
        android:background="#00ffff"
        android:layout_width="match_parent"
        android:minHeight="30dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_feed_back_number"
            android:hint="您的姓名、手机号、邮箱"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    
    <Button
        android:id="@+id/btn_feed_back_commit"
        android:text="提交"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
