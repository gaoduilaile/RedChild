<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <!--titlebar布局-->
    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/main_titlebar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:leftIsVisible="true"
        app:leftIsBack="true"
        app:leftTitle="结算中心"
        app:mainTitle="送货时间"
        app:rightIsVIsible="false"
        app:titleDrawable="@mipmap/about"
        app:titleIsPicture="false"
        />


    <TextView
        style="@style/customcenter_content_title"
        android:text="送货时间"/>

    <LinearLayout
        android:id="@+id/ll_sendtime_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/first_normal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_sendtime_desc1"
            style="@style/customframe_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="任何时间"/>

        <ImageView
            android:id="@+id/iv_sendtime_arrow1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ok"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sendtime_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/middle_normal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_sendtime_desc2"
            style="@style/customframe_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="仅限工作日"/>

        <ImageView
            android:id="@+id/iv_sendtime_arrow2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ok"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sendtime_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/last_normal"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/tv_sendtime_desc3"
            style="@style/customframe_first"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="仅限休息日"/>

        <ImageView
            android:id="@+id/iv_sendtime_arrow3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ok"
            android:visibility="invisible"
            />
    </LinearLayout>
</LinearLayout>
