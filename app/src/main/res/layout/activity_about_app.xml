<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.itheima10.team17.redchild.view.TitleBar

            android:id="@+id/titlebar_about"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorPrimary"
            app:leftIsBack="true"
            app:leftTitle="返回"
            app:mainTitle="关于"
            app:rightIsVIsible="false"
            app:titleIsPicture="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/aboutegg"
                android:clickable="true"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:src="@mipmap/aboutapp"/>


        </LinearLayout>

        <EditText
            android:layout_margin="20dp"
            android:hint="IpAddress"
            android:id="@+id/ipconfig"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/btn_ipconfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="更改ip"/>

        <TextView
            android:id="@+id/tv_about_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="版本号 :"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="北京红孩子互联网有限公司"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/colorPrimary"
            android:text="检查更新"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/xiaoban"
        android:src="@mipmap/xiaoban"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
