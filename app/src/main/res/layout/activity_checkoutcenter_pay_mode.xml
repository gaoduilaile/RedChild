<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <!--titlebar布局-->
    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/main_titlebar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:leftIsVisible="true"
        app:leftIsBack="true"
        app:leftTitle="结算中心"
        app:mainTitle="支付方式"
        app:rightIsVIsible="false"
        app:titleDrawable="@mipmap/about"
        app:titleIsPicture="false"
        />


    <TextView
        style="@style/customcenter_content_title"
        android:text="支付方式"/>

    <LinearLayout
        android:id="@+id/ll_paymode_cash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/first_normal"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_paymode_name_cash"
            style="@style/customframe_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="到付-现金"/>

        <ImageView
            android:id="@+id/iv_cash_okarrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ok"
            android:visibility="invisible"
            />

    </LinearLayout>

    <LinearLayout
    android:id="@+id/ll_paymode_arrive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/middle_normal"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/tv_paymode_name_pos"
        style="@style/customframe_first"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="到付-pos"/>

    <ImageView
        android:id="@+id/iv_arrive_okarrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ok"
        android:visibility="invisible"
        />

</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_paymode_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/last_normal"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_paymode_name_alipay"
            style="@style/customframe_first"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="支付宝"/>

        <ImageView
            android:id="@+id/iv_alipay_okarrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ok"
            android:visibility="invisible"
            />
    </LinearLayout>
</LinearLayout>
