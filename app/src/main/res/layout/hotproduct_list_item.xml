<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:layout_margin="10dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/hotproduct_ll_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/limit1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/hotproduct_ll_intor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="贝因美奶粉(900克)"
            android:textColor="#000"
            android:textSize="20sp"/>


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/hotproduct_ll_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotproduct_ll_intor"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/hotproduct_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotproduct_tv_price"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="￥68.00"
                android:textColor="#f00"
                android:textSize="20sp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:id="@+id/hotproduct_tv_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥68.00"
                android:textColor="#7B7B7B"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotproduct_ll_ll"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/hotproduct_tv_detal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotproduct_tv_price"
                android:layout_marginTop="5dp"
                android:text="已有120条评论"
                android:textColor="#7B7B7B"
                android:textSize="20sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/hotproduct_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/arrow_normal"/>
    </RelativeLayout>

</LinearLayout>
