<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.itheima10.team17.redchild.view.TitleBar
                android:id="@+id/btn_addressmanagement_addressback"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/colorPrimary"
                app:leftIsVisible="true"
                app:leftTitle="返回"
                app:mainTitle="地址管理"
                app:rightIsVIsible="false"
                app:titleDrawable="@mipmap/about"/>

            <com.itheima10.team17.redchild.view.MListView
                android:id="@+id/lv_amma_showaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null">

            </com.itheima10.team17.redchild.view.MListView>


            <Button
                android:id="@+id/btn_amma_addnewAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/btn_red_normal"
                android:text="添加新地址"
                android:textColor="#fff"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>