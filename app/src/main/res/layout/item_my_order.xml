<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="20dp"
              android:padding="10dp"
              android:background="@drawable/checkoutcenter_customframe"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_my_order_number"
        android:text="订单编号 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_my_order_money"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_item_my_order_number"
        android:text="订单总额 : ¥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_item_my_order_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_my_order_state"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_item_my_order_number"
        android:layout_toRightOf="@+id/tv_item_my_order_money"
        android:text="状态 : "
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_my_order_time"
        android:layout_below="@+id/tv_item_my_order_money"
        android:layout_marginTop="5dp"
        android:text="2020/20/20 20:20:20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>