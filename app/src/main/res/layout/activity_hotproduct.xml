<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
             >
    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/btn_hotproduct_back"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        app:leftIsBack="true"
        app:leftTitle="返回"
        app:mainTitle="热门单品"
        app:rightIsVIsible="false"
        app:titleDrawable="@mipmap/about" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:weightSum="4">

        <Button
            android:id="@+id/hotproduct_bt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="销量"/>

        <Button
            android:id="@+id/hotproduct_bt2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="价格"/>

        <Button
            android:id="@+id/hotproduct_bt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="好评度"/>

        <Button
            android:id="@+id/hotproduct_bt4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:text="上架时间"/>

    </LinearLayout>

    <ListView
        android:id="@+id/hotporduct_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
    </ListView>

</LinearLayout>
