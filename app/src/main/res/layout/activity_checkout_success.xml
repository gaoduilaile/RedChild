<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--titlebar布局-->
    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/main_titlebar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        app:leftIsVisible="true"
        app:leftTitle="结算中心"
        app:mainTitle="提交成功"
        app:rightIsVIsible="false"
        app:titleDrawable="@mipmap/about"
        app:titleIsPicture="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="您的订单已提交，我们会尽快安排发货！"
        android:textSize="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/checkoutcenter_customframe"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="您的订单号：13130545116"
            android:textSize="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="应付金额：￥460.00"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付方式：支付宝"
            android:textSize="16dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_goon_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续购物"
        android:background="@mipmap/button_long_normal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/btn_check_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看订单"
        android:background="@mipmap/button_long_selected"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkoutcenter_customframe"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textSize="16dp"
        android:text="如有疑问，您可以报答客服电话：\n400-800-8888"
        />
</LinearLayout>
