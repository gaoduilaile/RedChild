<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.itheima10.team17.redchild.view.TitleBar
        android:id="@+id/main_titlebar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        app:leftIsVisible="false"
        app:rightIsVIsible="false"
        app:mainTitle="商品分类"
        app:titleIsPicture="false"/>

    <ListView
        android:layout_below="@id/main_titlebar"
        android:background="@drawable/shape_listview_stroke"
        android:padding="1px"
        android:id="@+id/lv_product_navi"
        android:layout_width="110dp"
        android:layout_height="match_parent">
    </ListView>


    <ListView
        android:id="@+id/gv_gategorydetail"
        android:divider="@null"
        android:layout_below="@id/main_titlebar"
        android:layout_toRightOf="@id/lv_product_navi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>